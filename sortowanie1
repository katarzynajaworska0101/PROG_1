/* Sortowanie przez selekcje. */
 
#include <stdio.h>
 
#define N 10
 
main()
{
  int a[10]; /* Sortowana tablica. */
  int i, i_max, max, j;
 
  /* Wczytanie danych. */
  printf("Podaj %d liczb calkowitych", N);
  printf(" oddzielonych spacjami.\n");
  for ( i = 0; i < N; i++ )
    scanf("%d", &a[i]);
  printf("Ciag do posortowania:\n");
  for ( i = 0; i < N; i++ )
    printf("%d, ", a[i]);
  printf("\n");
 
  /* Wlasciwe sortowanie. */
  for ( j = N-1; j > 0; j-- ){
  /* Nzm.: a[0],...,a[j]<=a[j+1]<=...<=a[N-1] */
    max = a[0];
    i_max = 0;
    for ( i = 1; i <= j; i++ )
    /* Nzm.: a[i_max]=max=MAX(a[0],...,a[i-1]) */
      if ( a[i] > max ){
        max = a[i];
        i_max = i;
      }
    a[i_max] = a[j];
    a[j] = max;
  }
 
  /* Wypisanie wynikow. */
  printf("CiÄ…g posortowany:\n");
  for ( i = 0; i < N; i++ )
    printf("%d, ", a[i]);
  printf("\n");
 
  return 0;
 
}
